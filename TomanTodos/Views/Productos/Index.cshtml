@model IEnumerable<TomanTodos.Models.TomanTodosModels.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<hr />

@*<p>
        @Html.ActionLink("Nuevo Producto", "Create", "Procutos", new { @class = "btn btn-success" })
    </p>*@

<div class="table-responsive">
    <table class="table table-striped display" id="table-productos" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th></th>

                <th>
                    Producto
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>

                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img src="/Productos/RetrieveImage/@item.Id" alt="" height="120" width="120" class="home-img" />
                    </td>

                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>

                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Categoria.Nombre)

                    </td>

                    <td class="align-middle text-center">
                        @*@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning" })*@
                        <a class="btn btn-outline-warning" href="@Url.Action("Edit", "Productos")?Id= @item.Id" data-toggle="tooltip" data-placement="bottom" title="Editar producto">
                            <i class="fa fa-pen" aria-hidden="true"></i>
                        </a>
                    </td>

                    <td class="align-middle text-center">
                        @*@Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger fa fa-minus" })*@
                        <a class="btn btn-outline-danger" href="@Url.Action("Delete", "Productos")?Id= @item.Id" data-toggle="tooltip" data-placement="bottom" title="Eliminar producto">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

