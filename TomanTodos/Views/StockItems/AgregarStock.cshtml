@model TomanTodos.Models.TomanTodosModels.Producto

@{
    ViewBag.Title = "Agregar Stock";
}

<h2>Agregar Stock de "@Model.Nombre"</h2>
<hr />

<div class="row">
    <div class="col-md-4 text-center">
        <img src="/Productos/RetrieveImage/@Model.Id" alt="" height="300" width="300" />
    </div>

    <div class="col-md-8">
        <form action="/StockItems/AgregarStock" method="post">

            <div class="form-group">
                <label class="control-label col-md-2">Cantidad</label>
                <div class="col-md-10">
                    <input type="number" name="cantidad" value="" min="1" class="form-control cantidadActualizar" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Sucursal</label>
                <div class="col-md-10">
                    @Html.DropDownList("sucursalId", null, htmlAttributes: new { @class = "form-control select2-noSearch" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="hidden" name="productoId" value="@Model.Id" />
                    <input type="submit" name="Guardar" value="Guardar" class="btn btn-primary text-center actualizarStock" />
                </div>
            </div>     
        </form>
    </div>
</div>